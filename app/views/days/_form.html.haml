= form_for([@day.week, @day]) do |form|
  - if day.errors.any?
    #error_explanation
      %h2
        = pluralize(@day.errors.count, "error")
        prohibited this day from being saved:
      %ul
        - @day.errors.full_messages.each do |message|
          %li= message
  .field
    = form.label :day_of_week
    = form.text_field :day_of_week
  .actions
    = form.submit
